
function kk_k8s_cp() {
    kubectl cp test_profile.tgz smi/ops-center-smi-cluster-deployer-6bccc7fd4b-d5px5:/data/software/host-profile
    kubectl exec -it smi/ops-center-smi-cluster-deployer-6bccc7fd4b-d5px5 'ls /date/software'
}

function kk_k8s_bash() {
    local pods=$(kk_input_from_exe kubectl get pods -n smi)
    echo $pod
    local cmd="kubectl exec -it $pod bash -n smi"
    echo $cmd
}

function kkk8s() {
    local what=`ksGetInput 'pod bar'`
    kubectl describe pod/ops-center-smi-cluster-deployer-6bccc7fd4b-d5px5 -n smi
}
echo $BASH_SOURCE loaded